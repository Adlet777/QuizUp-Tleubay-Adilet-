<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CategoryActivity">

    <TextView
            android:text="Please, choose your category:"
            android:layout_width="224dp"
            android:layout_height="103dp"
            android:id="@+id/textView" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.84" android:fontFamily="casual" android:textAlignment="center"
            android:textSize="24sp" app:layout_constraintBottom_toTopOf="@+id/firstCategory"/>
    <Button
            android:layout_width="182dp"
            android:layout_height="85dp"
            android:id="@+id/secondCategory" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.938" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.497" android:background="#9EDF7D" android:fontFamily="casual"
            android:textAlignment="center" android:textSize="18sp" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/thirdCategory"/>
    <Button
            android:layout_width="183dp"
            android:layout_height="85dp"
            android:id="@+id/thirdCategory" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.758" app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintTop_toTopOf="parent" android:background="#9EDF7D" android:fontFamily="casual"
            android:textAlignment="center" android:textSize="18sp" android:textStyle="bold"/>
    <Button
            android:layout_width="182dp"
            android:layout_height="88dp"
            android:id="@+id/firstCategory" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintVertical_bias="0.91" app:layout_constraintTop_toTopOf="parent"
            android:background="#9EDF7D" android:fontFamily="casual" android:textAlignment="center"
            android:textSize="18sp" android:textStyle="bold" app:layout_constraintBottom_toTopOf="@+id/secondCategory"/>
</androidx.constraintlayout.widget.ConstraintLayout>