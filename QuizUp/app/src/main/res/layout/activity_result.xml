<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity">

    <TextView
            android:text="Congratulations! "
            android:layout_width="287dp"
            android:layout_height="71dp"
            android:id="@+id/textView2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="casual" android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="0.156"/>
    <TextView
            android:layout_width="287dp"
            android:layout_height="71dp"
            android:id="@+id/name" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="casual" android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="0.267" android:textAllCaps="true"
            android:textColor="#4CAF50" android:textStyle="bold"/>
    <TextView
            android:text="Your Result is:"
            android:layout_width="287dp"
            android:layout_height="71dp"
            android:id="@+id/textView8" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="casual" android:textAlignment="center"
            android:textSize="36sp"
            app:layout_constraintVertical_bias="0.442"/>
    <TextView
            android:layout_width="188dp"
            android:layout_height="75dp"
            android:id="@+id/resultat"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="casual" android:textAlignment="center" android:textSize="36sp"
            app:layout_constraintVertical_bias="0.434" android:textColor="#4CAF50"/>
    <Button
            android:text="Start again"
            android:layout_width="139dp"
            android:layout_height="68dp"
            android:id="@+id/backToCategories" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/resultat" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.28" android:background="#9EDF7D"
            android:fontFamily="casual" android:textAlignment="center" android:textSize="18sp"
            android:textStyle="bold"/>
</androidx.constraintlayout.widget.ConstraintLayout>