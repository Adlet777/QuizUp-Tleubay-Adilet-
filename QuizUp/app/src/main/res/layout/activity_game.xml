<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".GameActivity">

    <Button
            android:layout_width="121dp"
            android:layout_height="92dp"
            android:id="@+id/b"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.908"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/d" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/a"/>
    <Button
            android:text="Next question"
            android:layout_width="152dp"
            android:layout_height="57dp"
            android:id="@+id/next" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.928"
            android:fontFamily="casual" android:textAlignment="center" android:textStyle="bold"
            android:background="#9EDF7D" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"/>
    <TextView
            android:layout_width="365dp"
            android:layout_height="263dp"
            android:id="@+id/questionBody" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintVertical_bias="0.172"
            android:fontFamily="casual" android:textSize="24sp" android:textAlignment="center"
            app:layout_constraintHorizontal_bias="0.6"/>
    <Button
            android:layout_width="128dp"
            android:layout_height="90dp"
            android:id="@+id/c" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.052" app:layout_constraintVertical_bias="0.776"
            app:layout_constraintTop_toTopOf="parent" android:textSize="12sp"/>
    <Button
            android:layout_width="121dp"
            android:layout_height="92dp"
            android:id="@+id/d" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.908" app:layout_constraintVertical_bias="0.778"
            app:layout_constraintTop_toTopOf="parent" android:textSize="12sp"/>
    <Button
            android:layout_width="124dp"
            android:layout_height="89dp"
            android:id="@+id/a" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.066" app:layout_constraintVertical_bias="0.878"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/c" app:layout_constraintTop_toBottomOf="@+id/questionBody"/>
    <TextView
            android:layout_width="108dp"
            android:layout_height="48dp"
            android:id="@+id/textView3" android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.993" app:layout_constraintVertical_bias="0.028"
            android:fontFamily="casual" android:textAlignment="center" android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Correct answers:"
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:id="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintHorizontal_bias="0.502" app:layout_constraintVertical_bias="0.028"
            android:fontFamily="casual" android:textAlignment="center" android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="@+id/textView3"/>
</androidx.constraintlayout.widget.ConstraintLayout>